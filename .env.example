# Required - GoTrue Configuration
GOTRUE_URL=http://localhost:9999
GOTRUE_ANON_KEY=your-anon-key-here

# Optional - Server Configuration
GRPC_PORT=50051
METRICS_PORT=9090
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
GOTRUE_TIMEOUT=30s

# Optional - Runtime Configuration
ENVIRONMENT=development
LOG_LEVEL=debug

# Optional - TLS Configuration (for secure gRPC)
TLS_ENABLED=false
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem

# Optional - Google OAuth (if using)
# GOOGLE_CLIENT_ID=your-client-id
# GOOGLE_CLIENT_SECRET=your-client-secret

# Optional - Apple OAuth (if using)
# APPLE_CLIENT_ID=your-client-id
# APPLE_TEAM_ID=your-team-id
# APPLE_KEY_ID=your-key-id
# APPLE_PRIVATE_KEY=your-private-key

# ============================================
# App Attestation (Optional - for app lockdown)
# ============================================
# Set to true to require app attestation from clients
# This restricts access to only your iOS/Android apps
ATTESTATION_ENABLED=false

# iOS App Attest Configuration
# ATTESTATION_IOS_APP_ID=TEAMID.com.yourcompany.yourapp
# ATTESTATION_IOS_ENV=production  # or "development"

# Android Play Integrity Configuration
# ATTESTATION_ANDROID_PACKAGE=com.yourcompany.yourapp
# ATTESTATION_ANDROID_PROJECT=your-gcp-project-id
# ATTESTATION_ANDROID_KEY=service-account-json-content-or-path
